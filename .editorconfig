root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.{h,c,cpp}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.cmake]
indent_style = space
indent_size = 2

[CMakeLists.txt]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
